<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>All Cocktails</h1>
      <ul>
        <% @cocktails.each do |cocktail|  %>
          <li> <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :thumnail alt: "Picture not found" %> <%= link_to cocktail.name, cocktail_path(cocktail) %></li>
        <% end %>
      </ul>
      <%= link_to "Add new cocktail", new_cocktail_path, class: 'btn btn-primary'  %>
    </div>
  </div>
</div>

<%= cl_image_tag("THE_IMAGE_ID_FROM_LIBRARY",
      width: 400, height: 300, crop: :fill) %>

<!-- for face detection -->
<%= cl_image_tag("IMAGE_WITH_FACE_ID",
      width: 150, height: 150, crop: :thumb, gravity: :face) %>

